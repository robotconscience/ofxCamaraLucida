<camaralucida>

	<calibration>
        <kinect>camara_lucida/openni_calibration.yml</kinect>
        <projector>camara_lucida/projector_calibration.yml</projector>
	</calibration>	

	<near>0.1</near>
	<far>20.0</far>
	<mesh_step>2</mesh_step>
	<depth_xoff>-8</depth_xoff>

	<texture>
		<width>1024</width>
		<height>768</height>
		<num_samples>1</num_samples>
    </texture>

    <ui>
        <debug>d</debug>
        <help>h</help>
		<scene_ctrl>
			<zoom>z</zoom>
			<reset>x</reset>
		</scene_ctrl>
		<viewpoint>
			<prev>c</prev>
			<next>v</next>
		</viewpoint>
		<depth_xoff>
			<inc>b</inc>
			<dec>n</dec>
		</depth_xoff>
	</ui>

</camaralucida>

