<camaralucida>

  <calibration>
    <kinect>camara_lucida/kinect_calibration.yml</kinect>
    <projector>camara_lucida/projector_calibration.yml</projector>
  </calibration>	

  <mesh_step>1</mesh_step>

  <texture>
    <width>1024</width>
    <height>768</height>
    <num_samples>1</num_samples>
  </texture>

  <ui>
    <debug>d</debug>
    <help>h</help>
    <scene_ctrl>
      <zoom>z</zoom>
      <reset>x</reset>
    </scene_ctrl>
    <viewpoint>
      <prev>c</prev>
      <next>v</next>
    </viewpoint>
  </ui>

</camaralucida>

